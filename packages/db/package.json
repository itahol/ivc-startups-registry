{
  "name": "@repo/db",
  "type": "module",
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "check-types": "tsc --noEmit",
    "lint": "npx oxlint",
    "fix": "npx oxlint --fix",
    "format": "npx oxfmt",
    "generate-db-types": "kysely-codegen"
  },
  "exports": {
    "./db": {
      "types": "./src/db.ts",
      "default": "./dist/db.js"
    },
    "./db-types": {
      "types": "./src/db-types.d.ts"
    },
    "./json-utils": {
      "types": "./src/json-utils.ts",
      "default": "./dist/json-utils.js"
    },
    "./pagination-utils": {
      "types": "./src/pagination-utils.ts",
      "default": "./dist/pagination-utils.js"
    }
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "typescript": "latest"
  },
  "dependencies": {
    "@tediousjs/connection-string": "0.5.0",
    "kysely": "^0.28.7",
    "tarn": "^3.0.2",
    "tedious": "^18.6.1"
  }
}
