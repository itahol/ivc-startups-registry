{
  "lsp": {
    "vtsls": {
      "settings": {
        // For TypeScript:
        "typescript": {
          "tsserver": { "maxTsServerMemory": 10240 },
          "preferences": {
            "importModuleSpecifier": "auto"
          }
        }
      }
    },
    "oxc": {
      "initialization_options": {
        "options": {
          "fmt.experimental": true
        }
      }
    }
  },
  "languages": {
    "TypeScript": {
      "language_servers": ["oxc", "vtsls"],
      "formatter": "language_server"
    },
    "TSX": {
      "language_servers": ["oxc", "vtsls"],
      "formatter": "language_server"
    }
  }
}
